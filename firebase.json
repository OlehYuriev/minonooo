{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ],
  "hosting": {
    "app": {
      "source": "app",
      "env": [
        {
          "variable": "NEXT_PUBLIC_LIQPAY_PUBLICK_KEY",
          "secret": "NEXT_PUBLIC_LIQPAY_PUBLICK_KEY"
        },
        {
          "variable": "NEXT_PUBLIC_LIQPAY_PRIVATE_KEY",
          "secret": "NEXT_PUBLIC_LIQPAY_PRIVATE_KEY"
        },
        {
          "variable": "NEXT_PUBLIC_NP_KEY",
          "secret": "NEXT_PUBLIC_NP_KEY"
        }
      ]
    }
  }
}
